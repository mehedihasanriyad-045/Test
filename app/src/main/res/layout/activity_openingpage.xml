<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/openback"
    tools:context=".Openingpage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:text="Choose Playing Mode"
        android:textAlignment="gravity"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHighlight="@color/colorPrimary"
        android:background="#fdc47b"
        android:layout_margin="50dp"/>



    <Button
        android:id="@+id/vscomputer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="VS Computer"
        android:textSize="25sp"
        android:textColor="#000"/>

    <Button
        android:id="@+id/p2p"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Two Players Mode"
        android:textSize="25sp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mamuinna">

    </EditText>


</LinearLayout>